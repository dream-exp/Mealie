<%= render :template => 'layouts/_header' %>
	<% @user.each do |user| %>
	<% $student_number = user.student_number %>
	<div id="mypage_header">
		<h4>学籍番号：<span id="student_number"><%= user.student_number %></span></h4>
	</div>
	<% end %>

	<div id="title">
		<h3>本日の注文状況</h3>
	</div>

	<div id="orders">
	<table>
		<tr id="header">
			<th id="menu_name">メニュー名</th>
			<th id="price">価格</th>
			<th id="status">ステータス</th>
			<th id="delete">削除</th>
		</tr>
		<% @order.each do |order| %>
		<tr>
			<td class="menu_name">
			<%= order.menu_name %>
			</td>
			<td class="price">
			<%= order.price %>円
			</td>
			<td class="status"><%= order.status %></td>
			<td class="button">
			<% if order.status == 'トレー上' %>
				<%= link_to '/orders/destroy/'+order.id.to_s, :id => order.id do %>
				<button>削除</button>
				<% end %>
			<% end %>
			</td>
		</tr>
		<% end %>
	</table>
	<% if Order.where(student_number: params[:student_number]).where(created_at: Time.zone.now.all_day).count == 0 %>
			<p class="not_order">今日の注文はありません</p>
		<% end %>
	</div>

	<div id="mypage_content">
		<%= link_to '/tray/'+$student_number.to_s , :student_number => $student_number do %>
			<button id="reserve_info"><p>トレーの確認</p>
			</button>
		<% end %>
		<%= link_to '/past_order/'+$student_number.to_s, :student_number => $student_number do %>
		<button id="history"><p>注文履歴</p></button>
		<% end %>
	</div>
<%= render :template => 'layouts/_footer' %>